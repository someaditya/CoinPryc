<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.indianbitcoiner.coinpryc.FourthActivity"
    tools:layout_editor_absoluteY="25dp"
    tools:layout_editor_absoluteX="0dp">


    <TextView
        android:id="@+id/profit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed"
        android:text="Profit/Loss"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteY="254dp"
        tools:layout_editor_absoluteX="248dp" />

    <TextView
        android:id="@+id/holding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed"
        android:text="Holdings"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteY="57dp"
        tools:layout_editor_absoluteX="16dp" />

    <TextView
        android:id="@+id/marketval"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed"
        android:text="Market Value"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteY="387dp"
        tools:layout_editor_absoluteX="16dp" />

    <TextView
        android:id="@+id/netcost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed"
        android:text="Net Cost"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteY="387dp"
        tools:layout_editor_absoluteX="153dp" />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed"
        android:text="Add Transaction"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.852" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed"
        android:text="Delete Transaction"
        tools:layout_editor_absoluteY="437dp"
        tools:layout_editor_absoluteX="215dp" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        tools:layout_editor_absoluteY="62dp"
        tools:layout_editor_absoluteX="153dp" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        tools:layout_editor_absoluteY="62dp"
        tools:layout_editor_absoluteX="296dp" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        tools:layout_editor_absoluteY="275dp"
        tools:layout_editor_absoluteX="163dp" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        tools:layout_editor_absoluteY="287dp"
        tools:layout_editor_absoluteX="252dp" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed"
        android:text="Portfolio"
        android:textSize="24sp"
        android:textStyle="bold"
        android:typeface="sans"
        tools:layout_editor_absoluteY="13dp"
        tools:layout_editor_absoluteX="150dp" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Transaction History"
        tools:layout_editor_absoluteY="504dp"
        tools:layout_editor_absoluteX="115dp" />

    <TextView
        android:id="@+id/textView21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Market Value is based on data from Zebpay"
        tools:layout_editor_absoluteY="541dp"
        tools:layout_editor_absoluteX="57dp" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:backgroundTint="@color/common_google_signin_btn_text_dark_default"
        app:fabSize="mini"
        app:srcCompat="@drawable/opengraph"
        tools:layout_editor_absoluteY="495dp"
        tools:layout_editor_absoluteX="328dp" />

</android.support.constraint.ConstraintLayout>